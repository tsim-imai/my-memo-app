{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipboard Manager",
  "version": "0.1.0",
  "identifier": "com.imai.clipboard-manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Clipboard Manager",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "label": "small",
        "title": "クリップボード選択",
        "url": "small-window.html",
        "width": 400,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "dragDropEnabled": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Clipboard Manager"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "plugins": {
    "globalShortcut": {
      "all": true
    }
  }
}
